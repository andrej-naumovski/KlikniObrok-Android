<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/background_light"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="8dp">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profilepicture"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/navHeaderUserNameTextView" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navHeaderUserNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/navHeaderRestaurantNameTextView"
        style="@style/PrimaryTextBlack"
        android:layout_toEndOf="@+id/profilepicture"
        android:layout_toRightOf="@+id/profilepicture"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navHeaderRestaurantNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/profilepicture"
        android:layout_toRightOf="@+id/profilepicture"
        style="@style/SecondaryTextBlack"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="12sp"/>

</RelativeLayout>
