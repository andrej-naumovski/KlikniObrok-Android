<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryTextBlack">
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="SecondaryTextBlack">
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="HintTextBlack">
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.38</item>
    </style>

    <style name="PrimaryTextWhite">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SecondaryTextWhite">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="HintTextWhite">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="MyEditText">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/ripple_fb</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
